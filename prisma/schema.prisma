// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}


model Folder {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  userId         String      
  name           String

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  chats          Chat[]
}

model Chat {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  userId         String      
  folderId       String      @db.ObjectId
  name           String
  model          String

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  messages       Message[]
  folder         Folder      @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@index([folderId])
}

enum Role {
  user
  system
}

model Message {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  role           Role
  content        String
  
  userId         String
  chatId         String      @db.ObjectId

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  chat           Chat        @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId])
}

model Image {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  userId         String
  username       String
  profilePicture String

  prompt         String
  url            String
  publicId       String
  shared         Boolean     @default(false)
  size           String
  model          String

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

}

model UserSubscription{
  id                      String       @id @default(auto()) @map("_id") @db.ObjectId
  userId                  String       @unique
  stripeCustomerId        String?      @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId    String?      @unique @map(name: "stripe_subscription_id")
  stripePriceId           String?      @unique @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd  DateTime?      @unique @map(name: "stripe_current_period_end")
}

model Assistant {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  openaiId       String      @unique
  userId         String

  name           String
  description    String
  model          String
  instructions   String

  imagePublicId  String
  shared         Boolean     @default(false)
  messages       AssistantMessage[]
  fileIds        String[]

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model AssistantMessage {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  openaiId       String      @unique
  role           Role
  content        String
  
  userId         String
  assistantId    String      @db.ObjectId
  threadID       String      @db.ObjectId

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  assistant      Assistant   @relation(fields: [assistantId], references: [id], onDelete: Cascade)
  thread         AssistantThread      @relation(fields: [threadID], references: [id], onDelete: Cascade)

  @@index([assistantId])
}

model AssistantThread {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  openaiId       String      @unique
  userId         String
  name           String
  model          String

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  messages       AssistantMessage[]
}